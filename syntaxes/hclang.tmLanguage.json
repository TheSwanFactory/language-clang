{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Homoiconic C",
    "fileTypes": [
        "hc"
    ],
    "patterns": [
        {
            "name": "comment.line.number-sign.hc",
            "match": "(#)([^#\\n]*)$\\n"
        },
        {
            "name": "comment.block.number-sign.hc",
            "begin": "#",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.comment.begin.hc"
                }
            },
            "end": "#",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.comment.end.hc"
                }
            }
        },
        {
            "name": "string.quoted.double.hc",
            "begin": "“",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.hc"
                }
            },
            "end": "”",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.hc"
                }
            },
            "patterns": [
                {
                    "include": "#smart_quote"
                }
            ]
        }
    ],
    "repository": {
        "smart_quote": {
            "begin": "“",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.hc"
                }
            },
            "end": "”",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.hc"
                }
            },
            "patterns": [
                {
                    "include": "#smart_quote"
                }
            ]
        }
    }
}